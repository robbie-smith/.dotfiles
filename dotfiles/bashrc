  . ~/.config/exercism/exercism_completion.bash
fi

function docker_clean {
  docker rmi $(docker images -f "dangling=true" -q -f)
}

function aws_shell() {
  pyenv local 3.6.9
  aws-jumpcloud exec $1 -- aws-shell
}
eval "$(starship init bash)"
eval "$(pyenv init --path)"
. "$HOME/.cargo/env"
